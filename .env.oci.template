# Oracle OCI APEX Configuration Template
# Copy this to .env and fill in your actual values

# Oracle APEX Instance
APEX_OCI_URL=https://your-instance.apex.oraclecloud.com
APEX_WORKSPACE=YOUR_WORKSPACE_NAME
APEX_APP_ID=YOUR_APP_ID
APEX_USERNAME=your_apex_username
APEX_PASSWORD=your_apex_password

# Oracle Database Connection (from OCI)
OCI_DB_HOST=your-db-host.oraclecloud.com
OCI_DB_PORT=1521
OCI_DB_SERVICE_NAME=your_service_name
OCI_DB_USERNAME=your_db_username
OCI_DB_PASSWORD=your_db_password

# Full Connection String (TNS or Easy Connect)
OCI_CONNECTION_STRING=(DESCRIPTION=(ADDRESS=(PROTOCOL=TCP)(HOST=your-host)(PORT=1521))(CONNECT_DATA=(SERVICE_NAME=your_service)))

# ORDS REST API Base URL
ORDS_BASE_URL=https://your-instance.apex.oraclecloud.com/ords/your_workspace

# Local Development
ASPNETCORE_ENVIRONMENT=Development
API_PORT=5000
WEB_PORT=4200
